<Window x:Class="PL.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid Style="{Binding Source={StaticResource MyGridStyle}}">
        <!--Row of Grid Definitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Grid.Row="0" Text="Project Manager window" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="34" FontWeight="Bold" FontStyle="Italic" Foreground="White"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <Button Style="{Binding Source={StaticResource MyButtonStyle}}" Content="Tasks" Padding="5" Click="bcTask" Height="50" Width="100"  Margin="0,0,10,0"/>
            <Button Style="{Binding Source={StaticResource MyButtonStyle}}" Content="Engineers" Padding="5" Click="bcEngineer" Height="50" Width="100"  Margin="0,0,10,0"/>
        </StackPanel>


    </Grid>
</Window>
