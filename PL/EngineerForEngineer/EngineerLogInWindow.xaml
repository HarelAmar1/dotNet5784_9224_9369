<Window x:Class="PL.EngineerForEngineer.EngineerLogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.EngineerForEngineer"
        mc:Ignorable="d"
        Title="EngineerLogInWindow" Height="350" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Style="{Binding Source={StaticResource MyGridStyle}}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="20" Content="System log in:" Margin="0,0,0,15" HorizontalAlignment="Center"/>
            <TextBox Height="35" Width="140" Margin="0,0,0,15" Text="{Binding Id}"/>
            <TextBox Height="35" Width="140" Margin="0,0,0,15" Text="{Binding Id}"/>
            <Button Content="Log in" Click="bcLogIn"  Margin="0,0,0,15"/>
            <Button Content="Sign in" Click="bcSignIn" Margin="0,0,0,15"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,50">
            <Label FontSize="20" Content="Username:" Height="35" Margin="0,0,0,15" />
            <Label FontSize="20" Content="Password:" Height="35" Margin="0,0,0,15" />
        </StackPanel>
    </Grid>
</Window>
