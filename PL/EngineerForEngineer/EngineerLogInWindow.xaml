<Window x:Class="PL.EngineerForEngineer.EngineerLogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.EngineerForEngineer"
        mc:Ignorable="d"
        Title="EngineerLogInWindow" Height="350" Width="400"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Style="{Binding Source={StaticResource MyGridStyle}}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label FontSize="20" Content="Enter Id To Login" Margin="0,0,0,15" HorizontalAlignment="Center"/>
            <TextBox Height="35" Width="140" Margin="0,0,0,15" Text="{Binding Id}"/>
            <Button Content="Login" Click="bcLogIn"/> 
        </StackPanel>

    </Grid>
</Window>
